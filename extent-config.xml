<?xml version="1.0" encoding="UTF-8"?>
<extentreports>
    <!-- Report theme -->
    <configuration>
        <theme>dark</theme>
        <!-- If you want a dark theme, use "dark" instead -->

        <!-- Timestamp format -->
        <timeFormat>HH:mm:ss</timeFormat>
        <!-- For a 12-hour clock format, use "hh:mm:ss a" -->

        <!-- Report name format -->
<!--        <reportName>Test Automation Report</reportName>-->
        <!-- Default file name is "Extent.html". If you want a different name, change it here -->

        <!-- Document title -->
        <documentTitle>Automation Test Results</documentTitle>

        <!-- Report encoding -->
        <encoding>UTF-8</encoding>

        <!-- Chart visibility on the dashboard -->
        <chartsOnRunComplete>true</chartsOnRunComplete>
    </configuration>

    <!-- Add custom system info -->
    <systemInfo>
        <parameter>
            <name>Browser</name>
            <value>Chrome</value>
            <!-- Add more parameters as needed, such as OS, environment, etc. -->
        </parameter>
    </systemInfo>
</extentreports>